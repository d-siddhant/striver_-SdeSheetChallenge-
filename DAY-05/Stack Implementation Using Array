// Stack class.
class Stack {
    
public:
    int capacity=0;
    int tope;
    int *arr;
    Stack(int capacity) {
        // Write your code here.
        this->capacity=capacity;
        arr=new int[capacity];
         tope=-1;
    }

    void push(int num) {
        // Write your code here.
        if(tope<capacity-1) arr[++tope]=num;
    }

    int pop() {
        // Write your code here.
        if(tope==-1) return -1;
        else{
            return arr[tope--];
        }
    }
    
    int top() {
        // Write your code here.
        if(tope==-1) return -1;
        else{
            return arr[tope];
        }
    }
    
    int isEmpty() {
        // Write your code here.
        if(tope==-1) return 1;
        else return 0;
    }
    
    int isFull() {
        // Write your code here.
        if(tope==capacity-1) return 1;
        else return 0;
    }
    
};

//More convenient way    
public:
    
    // Declare array.
    vector<int> myStack;
    
    // Stack size.
    int stackSize;
    
    // Maximum size.
    int n;
    
    // Constructor function.
    Stack(int n) {
    
        // Initialize class objects.
        this -> myStack.resize(n);
        this -> stackSize = -1;
        this -> n = n;
    }
