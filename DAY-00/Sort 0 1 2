void sort012(int *a, int n)
{
   //   Write your code here
    int d=0,b=0,c=0;
    for(int i=0;i<n;i++){
        if(a[i]==0) d++;
        else if(a[i]==1) b++;
        else c++;
    }
    for(int i=0;i<d;i++) a[i]=0;
    for(int i=d;i<d+b;i++) a[i]=1;
    for(int i=d+b;i<n;i++) a[i]=2;
    return;
    
}
