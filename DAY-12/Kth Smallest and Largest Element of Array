#include<bits/stdc++.h>
vector<int> kthSmallLarge(vector<int> &arr, int n, int k)
{
	// Write your code here.
    priority_queue<int> maxi;
    priority_queue<int,vector<int>,greater<int>> mini;
   
    for(int i=0;i<n;i++){
        maxi.push(arr[i]);
         mini.push(arr[i]);
    }
    int a=k-1;
    while(a--){
        maxi.pop();
        mini.pop();
    }
    return {mini.top(),maxi.top()};
    
}
