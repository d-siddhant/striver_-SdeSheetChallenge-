int maxDiff(vector<int> &a, int n)
{
    // Write your code here.
    vector<int> Rmax(n,0);
    Rmax[n-1]=a[n-1];
    for(int i=n-2;i>=0;i--){
        if(a[Rmax[i+1]]>=a[i]) Rmax[i]=Rmax[i+1];
        else Rmax[i]=i;
    }
    int maxi=  -2147483647 - 1;
    for(int i=0;i<n;i++){
        maxi=max(maxi,Rmax[i]-i);
    }
    return maxi;
}

